<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="12dp"
    app:strokeWidth="0dp"
    android:elevation="1dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/c_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/outline_health_and_safety_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/c_espec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Especialidad"
            app:layout_constraintStart_toEndOf="@id/c_img"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/c_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de doctor"
            app:layout_constraintStart_toEndOf="@id/c_img"
            app:layout_constraintTop_toBottomOf="@id/c_espec"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/c_atencion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000-05-12"
            app:layout_constraintBottom_toBottomOf="@id/c_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_espec"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif-black"
            android:textSize="18sp"
            />

        <ImageView
            android:id="@+id/c_tiempo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_access_time_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>